@{
    var title = (ViewData["Title"] as string ?? "CollabHub") + " | CollabHub";
    var desc = ViewData["MetaDescription"] as string ?? "Події, локації та активи в одному місці. Плануй і організовуй зручно.";
    var canonical = ViewBag.Canonical as string ?? Context?.Request?.Path.Value;
}
@{
    bool isHome = (ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
                   && ViewContext.RouteData.Values["action"]?.ToString() == "Index");
}
@using CollabHub.Services
@inject IFeatureFlagService FeatureFlags
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <meta name="description" content="@desc" />
    <link rel="canonical" href="@canonical" />

    <!-- Open Graph -->
    <meta property="og:title" content="@title" />
    <meta property="og:description" content="@desc" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@canonical" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html {
            scroll-behavior: smooth;
        }

        .section {
            padding: 72px 0;
        }

        .hero {
            background: linear-gradient(135deg,#111 0%,#343a40 100%);
            color: #fff;
            border-radius: 1rem
        }

            .hero .btn-lg {
                padding: .75rem 1.25rem
            }

        .sticky-contacts {
            position: fixed;
            right: 18px;
            bottom: 18px;
            z-index: 1030
        }

            .sticky-contacts .card {
                box-shadow: 0 10px 25px rgba(0,0,0,.25)
            }

        .card-img-top.object-cover {
            object-fit: cover;
            height: 180px
        }

        .badge-soft {
            background: rgba(13,110,253,.1);
            color: #0d6efd
        }
    </style>
</head>
<body data-bs-spy="scroll" data-bs-target="#landingNav" data-bs-offset="80" tabindex="0">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">CollabHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#landingNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav id="landingNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Organizations" asp-action="Index">Organizations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Venues" asp-action="Index">Venues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assets" asp-action="Index">Assets</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Map" asp-action="Index">Map</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="GoogleDrive" asp-action="Index">Drive файли</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Todo" asp-action="Index">ToDo</a>
                    </li>
                    @if (User?.Identity?.IsAuthenticated ?? false && FeatureFlags.IsEnabled("PremiumTodo", User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Todo" asp-action="Premium">Premium ToDo</a>
                        </li>
                    }

                    @* ДОДАТКОВО: якірні лінки на секції показуємо лише КОЛИ ми на головній *@
                    @if (isHome)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">На цій сторінці</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#organizations">Секція: Організації</a></li>
                                <li><a class="dropdown-item" href="#venues">Секція: Локації</a></li>
                                <li><a class="dropdown-item" href="#events">Секція: Події</a></li>
                                <li><a class="dropdown-item" href="#assets">Секція: Файли</a></li>
                                <li><a class="dropdown-item" href="#contacts">Секція: Контакти</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center gap-2">
                    <form class="d-flex me-2" method="get" asp-controller="Events" asp-action="Index">
                        <input name="q" class="form-control me-2" type="search" placeholder="Пошук подій…" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Знайти</button>
                    </form>

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        var plan = User.FindFirst("plan")?.Value ?? "Free";

                        <span class="navbar-text text-white-50 me-2">
                            @User.Identity!.Name (@plan)
                        </span>

                        <a class="btn btn-sm btn-outline-light me-2"
                           asp-controller="Account"
                           asp-action="Plans">
                            Плани
                        </a>

                        <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
                            <button type="submit" class="btn btn-sm btn-outline-light">Вийти</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light"
                           asp-controller="Account"
                           asp-action="Login">
                            Увійти через Google
                        </a>
                    }
                </div>
            </nav>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Липкі контакти (видно завжди) -->
    <div class="sticky-contacts">
        <div class="card">
            <div class="card-body p-3">
                <div class="fw-semibold small mb-2">Ми на зв'язку</div>
                <div class="d-flex flex-column gap-2">
                    <a class="btn btn-sm btn-primary" href="mailto:hello@collabhub.local">Email</a>
                    <a class="btn btn-sm btn-outline-secondary" href="tel:+380000000000">+38 000 000 00 00</a>
                    @* Було href="#contacts" — зробимо універсально на Home з фрагментом *@
                    <a class="btn btn-sm btn-outline-dark"
                       asp-controller="Home" asp-action="Index" asp-fragment="contacts">Форма</a>
                </div>
            </div>
        </div>
    </div>


    <footer class="border-top py-4 mt-4">
        <div class="container text-muted small d-flex justify-content-between">
            <span>© @DateTime.Now.Year CollabHub</span>
            <span>Built with ASP.NET Core & Bootstrap</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
