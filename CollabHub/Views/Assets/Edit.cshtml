@model CollabHub.Models.Asset
@{
    ViewData["Title"] = "Edit Asset";
}
<h1>Edit Asset</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <div class="mt-3">
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <p>Current file: <a href="@Model.FilePath" target="_blank">@Model.OriginalFileName</a></p>
                }
            </div>

            <div class="form-group mt-2">
                <label class="control-label">Replace file (optional)</label>
                <input type="file" name="file" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
